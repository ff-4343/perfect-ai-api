{
  "name": "my-prisma-service",
  "version": "1.0.0",
  "description": "Node.js + Prisma service deployed on Render",
  "main": "dist/server.js",
  "scripts": {
    "dev": "nodemon src/server.ts",
    "dev:remote": "nodemon -r dotenv/config src/server.ts dotenv_config_path=.env.remote",
    "build": "tsc",
    "start": "node dist/server.js",
    "start:remote": "node -r dotenv/config dist/server.js dotenv_config_path=.env.remote",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev --name init",
    "prisma:deploy": "prisma migrate deploy",
    "prisma:seed": "tsx prisma/seed.ts"
  },
  "engines": {
    "node": ">=18.x"
  },
  "dependencies": {
    "@prisma/client": "^5.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "express": "^4.18.2",
    "express-rate-limit": "^7.0.0",
    "swagger-ui-express": "^5.0.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.0",
    "@types/express": "^4.17.0",
    "@types/node": "^20.0.0",
    "@types/swagger-ui-express": "^4.1.0",
    "nodemon": "^3.0.0",
    "openapi-types": "^12.1.0",
    "prisma": "^5.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.2.0"
  }
}
