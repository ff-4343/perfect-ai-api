{
  "name": "my-prisma-service",
  "version": "1.0.0",
  "description": "Node.js + Prisma service (local dev with remote Render DB)",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "dev": "nodemon",
    "dev:remote": "dotenv -e .env.remote -- nodemon",
    "build": "tsc",
    "start": "node dist/server.js",
    "start:remote": "dotenv -e .env.remote -- node dist/server.js",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "dotenv -e .env.remote -- prisma migrate dev --name init",
    "prisma:deploy": "dotenv -e .env.remote -- prisma migrate deploy",
    "prisma:seed": "dotenv -e .env.remote -- node --loader ts-node/esm ./prisma/seed.ts"
  },
  "engines": {
    "node": "18.x"
  },
  "prisma": {
    "seed": "node --loader ts-node/esm ./prisma/seed.ts"
  },
  "dependencies": {
    "@prisma/client": "^5.15.0",
    "express": "^4.19.2",
    "cors": "^2.8.5",
    "express-rate-limit": "^7.2.0",
    "swagger-ui-express": "^5.0.0",
    "dotenv": "^16.4.5"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.30",
    "@types/cors": "^2.8.17",
    "@types/swagger-ui-express": "^4.1.6",
    "dotenv-cli": "^7.3.0",
    "nodemon": "^3.0.3",
    "prisma": "^5.15.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5",
    "openapi-types": "^12.1.3"
  },
  "private": true
}
