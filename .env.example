PORT=3000
DATABASE_URL=postgresql://USER:PASS@HOST:5432/perfect_ai

# CORS Configuration
# Optional: allow only these origins (comma separated). Leave empty to allow all.
# Example:
# CORS_ORIGIN=https://your-frontend.com,https://admin.your-frontend.com
CORS_ORIGIN=

# Multi-tenant Configuration
# Default tenant resolution method (header|subdomain|domain|param)
TENANT_RESOLUTION_METHOD=header
# Header name for tenant identification
TENANT_HEADER_NAME=x-tenant-slug
# Whether tenant is required for all routes (true|false)
TENANT_REQUIRED=false

# Development Settings
NODE_ENV=development
# Enable debug logging for tenant resolution
TENANT_DEBUG=false
