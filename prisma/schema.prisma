generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Organization {
  id        String   @id @default(cuid())
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt      // 👈 جديد
  projects  Project[]
}

model Project {
  id        String   @id @default(cuid())
  orgId     String
  name      String
  archetype String
  status    String   @default("planning")
  spec      Json
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt      // 👈 جديد

  org Organization @relation(fields: [orgId], references: [id])

  @@index([orgId])                   // 👈 فهرس للاستعلامات حسب المنظمة
}
